<?xml version="1.0"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Metadata>
        [HostComponent("module.texteditor.TextEditorModule")]
    </fx:Metadata>
    <s:layout>
        <s:VerticalLayout/>
    </s:layout>

    <s:Group width="100%" height="22">

        <s:layout>
            <s:HorizontalLayout/>
        </s:layout>

        <s:ToggleButton label="B" id="boldButton" width="32" visible="{hostComponent.boldButtonVisible}"
                        includeInLayout="{hostComponent.boldButtonVisible}" fontWeight="bold" toolTip="Bold"/>
        <s:ToggleButton label="I" id="italicButton" width="28" visible="{hostComponent.italicButtonVisible}"
                        includeInLayout="{hostComponent.italicButtonVisible}" fontStyle="italic" toolTip="Italic"/>
        <s:ToggleButton label="U" id="underlineButton" width="30" visible="{hostComponent.underlineButtonVisible}"
                        includeInLayout="{hostComponent.underlineButtonVisible}" textDecoration="underline"
                        toolTip="Underline"/>

        <mx:Spacer width="2"/>
        <s:ToggleButton label="List" id="listButton" width="28" visible="{hostComponent.listButtonVisible}"
                        includeInLayout="{hostComponent.listButtonVisible}" toolTip="Make a list"
                        skinClass="module.texteditor.skins.ToggleButtonSkin"
                        content="@Embed('/module/texteditor/assets/bullet.gif')"/>
        <mx:Spacer width="2"/>

        <s:Button id="biggerFontButton" width="28" visible="{hostComponent.biggerFontButtonVisible}"
                  includeInLayout="{hostComponent.biggerFontButtonVisible}" toolTip="Increase font size"
                  skinClass="module.texteditor.skins.ButtonSkin"
                  content="@Embed('/module/texteditor/assets/plus.gif')"/>
        <s:Button id="smallerFontButton" width="28" visible="{hostComponent.smallerFontButtonVisible}"
                  includeInLayout="{hostComponent.smallerFontButtonVisible}" toolTip="Decrease font size"
                  skinClass="module.texteditor.skins.ButtonSkin"
                  content="@Embed('/module/texteditor/assets/minus.gif')"/>

        <mx:Spacer width="2"/>

        <s:Button id="urlButton" width="28" visible="{hostComponent.urlButtonVisible}"
                  includeInLayout="{hostComponent.urlButtonVisible}" toolTip="Add link"
                  skinClass="module.texteditor.skins.ButtonSkin" content="@Embed('/module/texteditor/assets/url.gif')"/>
        <s:Button id="swfButton" width="28" visible="{hostComponent.swfButtonVisible}"
                  includeInLayout="{hostComponent.swfButtonVisible}" toolTip="Add SWF"
                  skinClass="module.texteditor.skins.ButtonSkin" content="@Embed('/module/texteditor/assets/swf.gif')"/>

        <mx:Spacer width="2"/>

        <s:ToggleButton id="upButton" width="28" visible="{hostComponent.indexButtonVisible}"
                        includeInLayout="{hostComponent.indexButtonVisible}" toolTip=""
                        skinClass="module.texteditor.skins.ToggleButtonSkin"
                        content="@Embed('/module/texteditor/assets/upindex.png')"/>
        <s:ToggleButton id="bottomButton" width="28" visible="{hostComponent.indexButtonVisible}"
                        includeInLayout="{hostComponent.indexButtonVisible}" toolTip=""
                        skinClass="module.texteditor.skins.ToggleButtonSkin"
                        content="@Embed('/module/texteditor/assets/bottomindex.png')"/>

        <mx:Spacer width="2"/>

        <mx:ColorPicker id="colorPicker" visible="{hostComponent.colorPickerVisible}"
                        includeInLayout="{hostComponent.colorPickerVisible}" toolTip="Text color"/>

        <mx:Spacer width="2"/>

        <s:ToggleButton id="symbolButton" width="28" visible="{hostComponent.symbolButtonVisible}"
                        includeInLayout="{hostComponent.symbolButtonVisible}" toolTip=""
                        skinClass="module.texteditor.skins.ToggleButtonSkin"
                        content="@Embed('/module/texteditor/assets/omega.gif')"/>
        <mx:Spacer width="2"/>
        <s:DropDownList id="sectionStylesDropDownList" dataProvider="{hostComponent.sectionStyles}" labelField="name"
                        prompt="Estilo" itemRenderer="module.texteditor.SectionStyleRenderer"
                        visible="{hostComponent.sectionStylesDropDownVisible}"
                        includeInLayout="{hostComponent.sectionStylesDropDownVisible}"/>

        <s:ToggleButton id="alignLeftButton" width="28" visible="{hostComponent.alignIconsVisible}"
                        includeInLayout="{hostComponent.alignIconsVisible}" toolTip=""
                        skinClass="module.texteditor.skins.ToggleButtonSkin"
                        content="@Embed('/module/texteditor/assets/align_left.png')"/>
        <s:ToggleButton id="alignCenterButton" width="28" visible="{hostComponent.alignIconsVisible}"
                        includeInLayout="{hostComponent.alignIconsVisible}" toolTip=""
                        skinClass="module.texteditor.skins.ToggleButtonSkin"
                        content="@Embed('/module/texteditor/assets/align_center.png')"/>
    </s:Group>


    <s:Group width="100%" height="100%">
        <s:Rect width="100%" height="100%">
            <s:stroke>
                <s:SolidColorStroke color="#000000" weight="1"/>
            </s:stroke>
        </s:Rect>
        <s:Scroller width="100%" height="100%">
            <s:RichEditableText id="richEditableText" width=" 100%"
                                paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5"
                                maxChars="{hostComponent.maxChars}" multiline="{!hostComponent.singleLine}}">
            </s:RichEditableText>
        </s:Scroller>
    </s:Group>

    <s:List id="symbolList" includeInLayout="false" visible="false"
            x="{symbolButton.x - symbolList.width + symbolButton.width}" y="{symbolButton.y + symbolButton.height}" contentBackgroundAlpha="1"
            contentBackgroundColor="0xFFFFFF"
            width="350" height="85">
        <s:layout>
            <s:TileLayout/>
        </s:layout>
    </s:List>

    <fx:Script><![CDATA[
        ]]></fx:Script>
</s:Skin>

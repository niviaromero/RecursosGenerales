<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:editor="editor.*"
         left="10" top="10" right="10" bottom="10" creationComplete="Zip.getInstance().loadFilesToInclude()">

    <s:states>
        <s:State name="start"/>
        <s:State name="edit"/>
    </s:states>

    <s:layout>
        <s:VerticalLayout/>
    </s:layout>

    <editor:StartView new="currentState='edit'" edit="currentState='edit'" includeIn="start" horizontalCenter="0"
                      verticalCenter="0"/>

    <editor:EditView includeIn="edit" itemCreationPolicy="immediate" itemDestructionPolicy="auto"/>

</s:Group>
